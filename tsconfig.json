{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false, // types are emitted manually via tsc in `/scripts`
    "importHelpers": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "outDir": "compiled",
    "downlevelIteration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "pretty": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
