{
  "name": "sus-components",
  "version": "0.0.2",
  "author": "Christian Todd <christian.todd7@gmail.com> (https://www.chrstntdd.com/)",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "source": "src/index.ts",
  "types": "lib/types",
  "sideEffects": false,
  "files": [
    "lib",
    "src"
  ],
  "description": "Components, hooks, and helpers for react@next",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrstntdd/sus-components.git"
  },
  "scripts": {
    "dev": "concurrently -k -p '[{name}]' -n 'Library,ExampleApp' -c 'green.bold,cyan.bold' './scripts/build.ts dev-lib' 'parcel serve examples/index.html'",
    "trans": "./scripts/build.ts transpile-only",
    "lint": "tslint -c tslint.json '{src,scripts}/**/*.{ts,tsx}' -t codeFrame --fix",
    "build-lib": "./scripts/build.ts build-lib",
    "build-example": "parcel build examples/index.html",
    "docz-dev": "docz dev",
    "docz-build": "docz build",
    "prettier": "prettier --write 'src/**/*.{ts,tsx,mdx}'"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@chrstntdd/router": "^0.0.7",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.17",
    "@types/react-dom": "^16.0.11",
    "concurrently": "^4.1.0",
    "cross-spawn": "^6.0.5",
    "docz": "^0.13.5",
    "docz-theme-default": "^0.13.5",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.0",
    "jest-watch-typeahead": "^0.2.0",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.9.0",
    "parcel": "^1.11.0",
    "prettier": "^1.15.3",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "react-testing-library": "^5.4.2",
    "rollup": "^0.68.2",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "sass": "^1.15.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2",
    "which": "^1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*": [
        "yarn prettier",
        "yarn lint",
        "git add"
      ]
    },
    "ignore": [
      "yarn.lock",
      ".gitignore",
      "node_modules"
    ]
  }
}
