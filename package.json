{
  "name": "sus-components",
  "version": "0.0.3",
  "author": "Christian Todd <christian.todd7@gmail.com> (https://www.chrstntdd.com/)",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "source": "src/index.ts",
  "types": "lib/types",
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "description": "Components, hooks, and helpers for react@next",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrstntdd/sus-components.git"
  },
  "scripts": {
    "dev": "concurrently -k -p '[{name}]' -n 'Library,ExampleApp' -c 'green.bold,cyan.bold' 'yarn watch-lib' 'yarn use'",
    "watch-lib": "./scripts/build.ts dev-lib",
    "trans": "./scripts/build.ts transpile-only",
    "build-lib": "./scripts/build.ts build-lib",
    "use": "NODE_ENV='development' ./node_modules/.bin/webpack-dev-server --quiet --color -c webpack.config.ts",
    "test": "jest -c ./jest.config.js --coverage --verbose",
    "test-auto": "jest -c ./jest.config.js --watch",
    "test-fast": "jest -c ./jest.config.js --silent",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}'",
    "pub-check": "yarn build-lib && prettier --write 'lib/**/*.{js,mjs}' && npm pack --dry"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@chrstntdd/router": "^0.0.11",
    "@types/jest": "^24.0.0",
    "@types/node": "^11.9.4",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.1",
    "babel-jest": "^24.0.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "concurrently": "^4.1.0",
    "cross-spawn": "^6.0.5",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.1",
    "jest-watch-typeahead": "^0.2.1",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.9.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.16.4",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "react-testing-library": "^5.8.0",
    "rollup": "^1.1.2",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.3.3",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "webpack-stylish": "^0.1.8",
    "which": "^1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test-fast"
    }
  },
  "lint-staged": {
    "linters": {
      "*": [
        "yarn prettier",
        "git add"
      ]
    },
    "ignore": [
      "yarn.lock",
      ".gitignore",
      "node_modules"
    ]
  }
}
